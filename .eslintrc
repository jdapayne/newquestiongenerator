{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "ignorePatterns": [ "node_modules/**","modules/vendor/*"],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "env": {
        "browser": true,
        "es6": true
      },
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ]
    }
  ]
}
